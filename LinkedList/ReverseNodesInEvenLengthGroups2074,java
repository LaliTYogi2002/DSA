public class ReverseNodesInEvenLengthGroups2074{
     public ListNode reverseEvenLengthGroups(ListNode head) {

        // return head;
        return solve(head, 1);
    }

    public ListNode solve(ListNode head, int k){
        if(head == null){
            return head;
        }
        ListNode temp = head ;
        int count = 1 ;
        for(int i = 1 ; i< k ; i++){
           if(temp.next != null){
           count++;
           temp = temp.next;
           }
        }

        ListNode res = solve(temp.next, k+1);
            temp.next = null;
        if(count %2 ==0){
            ListNode head1 = head;
            ListNode prev = null;
            ListNode curr = head;

            while(curr!=null){
                ListNode next = curr.next;
                curr.next = prev ;
                prev = curr;
                curr = next;
            }
            head1.next =res ;
            return prev;
        }else{
            temp.next = res;
            return head;
        }
        
    }
}